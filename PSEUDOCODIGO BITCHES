BEGIN main
	row <- askDimension("rows"):integer
	col <- askDimension("columns"):integer
	end <- false:boolean
	B1 <- askBoats("1")
	B2 <- askBoats("2")

	WRITE ("Player 1")
	board1[][] <- generateBoard(row,col,B1,B2):integer

	WRITE ("Player 2")
	int board2[][] <- generateBoard(row,col,B1,B2):integer

	int visual1[][] <- generateVisual(length(board1),length(board2))
	int visual2[][] <- generateVisual(length(board1),length(board2))
	
	mainloop(visual1, visual2, baord1, board2, end, B1, B2)
END main


BEGIN askDimension(message)
	DO
		WRITE ("Introduce the number of "+message+": ")
		READ dimension
	WHILE(dimension < 3)
	RETURN dimension
END askDimension


BEGIN askBoats(number)
	DO
		WRITE ("Introduce the number of boats of length "+number+": ")
		READ boat
	WHILE(boat<0)
	RETURN boat
END askBoats
